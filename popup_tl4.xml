<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:padding="1dp">

    <!-- Left Layout -->
    <LinearLayout
        android:id="@+id/leftLayout"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical">

        <View
            android:id="@+id/left_rowView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/baseline_forward_24"
            android:rotation="180" />

        <TextView
            android:id="@+id/leftTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="60"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Middle Layout -->
    <LinearLayout
        android:id="@+id/middleLayout"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/middle_rowView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:background="@drawable/baseline_forward_24"
            android:rotation="270" />

        <TextView
            android:id="@+id/middleTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="60"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Right Layout -->
    <LinearLayout
        android:id="@+id/rightLayout"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/right_rowView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/baseline_forward_24" />

        <TextView
            android:id="@+id/rightTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="60"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>